formulas(assumptions).

    % 2p7
    % the order and connection of ideas is the same as the order and connection of things
    all connection ( 
        % if there are two connected ideas
        ( exists i exists j ( is_idea(i) & is_idea(j) & connects(connection,i,j) ) ) ->
        % then there are two connected things
        exists connection2 exists t exists u ( is_thing(t) & is_thing(u) & connects(connection2,t,u) )
    ).

end_of_list.

