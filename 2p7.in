formulas(assumptions).

    % 1a4    
    all e all c (
        % if c causes e...
        cause(c,e) ->
        % ...then...
        all ic all ie (
            % ...the idea of e depends on and involves the idea of c
            ( is_idea_of(ic,c) & is_idea_of(ie,e) ) ->
            ( depends_on(ie,ic) & involves(ie,ic) )
        )
    ).

    all i all o ( is_idea_of(i,o) -> is_idea(i) ).

    % each dependency relation is a "connection" in a graph
    all x all y ( depends_on(x,y) -> exists c ( connects(c,y,x) ) ).

    % each causal relation is a connection
    all x all y ( cause(x,y) -> exists c ( connects(c,x,y) ) ).

    all x is_thing(x).

end_of_list.

formulas(goals).

    % 2p7
    % the order and connection of ideas is the same as the order and connection of things
    all connection ( 
        % if there are two connected ideas
        ( exists i exists j ( is_idea(i) & is_idea(j) & connects(connection,i,j) ) ) ->
        % then there are two connected things
        exists connection2 exists t exists u ( is_thing(t) & is_thing(u) & connects(connection2,t,u) )
    ).

end_of_list.

